@model Learning4.Models.Account.AssignRole

<div class="container">
    <h2>Assign Role</h2>
    <form asp-action="AssignRole" method="post">
        <div class="form-group">
            <label asp-for="SelectedUserName">User</label>
            <select asp-for="SelectedUserName" class="form-control select2" asp-items="@Model.UserName">
                <option value="">-- Select User --</option>
            </select>
            <span asp-validation-for="SelectedUserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedRoleName">Role</label>
            <select asp-for="SelectedRoleName" class="form-control select2" asp-items="@Model.RoleName">
                
                <option value="">-- Select Role --</option>
            </select>
            <span asp-validation-for="SelectedRoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary py-2">Add Role</button>
    </form>
</div>


    <script>
        $(document).ready(function () {
            $('.select2').select2({
                width: '100%', // Use percentage for responsive design
                placeholder: '-- Select --',
                allowClear: true,
                theme: 'bootstrap' // Optional: Use Bootstrap theme for better styling
            });
        });
    </script>
