@model Learning4.Models.Coupons.CoouponBase

<div class="container">
    <h2>Add Coupon</h2>
    <div class="row">
        <span class="text-danger">@ViewBag.Message</span>
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="CouponCode"></label>
                <input asp-for="CouponCode" type="text" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountAmount"></label>
                <input asp-for="DiscountAmount" type="number" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumPurchaseAmount"></label>
                <input asp-for="MinimumPurchaseAmount" type="number" class="form-control" />
                <span asp-validation-for="MinimumPurchaseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate"></label>
                <input asp-for="ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Coupon</button>
        </form>
    </div>
</div>
